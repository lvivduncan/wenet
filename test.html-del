<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> group checkboxes </title>
    <style>
        body{padding:100px;}
        [type="checkbox"]{cursor:pointer;width:30px;height:30px}
    </style>
</head>
<body>

    <div class="checkboxs" id="id=1">
        <input type="checkbox" name="" id="id-11">
        <input type="checkbox" name="" id="id-12">
        <input type="checkbox" name="" id="id-13">
        <input type="checkbox" name="" id="id-14">
        <input type="checkbox" name="" id="id-15" checked>
        <input type="checkbox" name="" id="id-16">
    </div>
    <hr>
    <div class="checkboxs" id="id=2">
        <input type="checkbox" name="" id="id-21">
        <input type="checkbox" name="" id="id-22">
        <input type="checkbox" name="" id="id-23" checked>
        <input type="checkbox" name="" id="id-24">
        <input type="checkbox" name="" id="id-25">
        <input type="checkbox" name="" id="id-26">
    </div>
    

    <script>
        const checkboxs = document.querySelectorAll('.checkboxs input');

        checkboxs.forEach(element => {
            element.addEventListener('change', function(){

                const current = this;

                const parent = current.closest('.checkboxs');

                if(current.checked === true){

                    parent.querySelectorAll('input').forEach(item => {

                        item.checked = false;
                    });

                    current.checked = true;
                }

            });
        });
    </script>
</body>
</html>